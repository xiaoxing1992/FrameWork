<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_head_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/home_menu_default_head" />

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="FRANK"
                    android:textColor="#7e7e7e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/note_checked_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/list_problem_checked"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="5757"
                    android:textColor="#b8b8b8"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/designer_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="设计师"
                    android:textColor="#939393"
                    android:textSize="@dimen/tv_12_sp" />

                <TextView
                    android:id="@+id/worker_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="工长"
                    android:textColor="#939393"
                    android:textSize="@dimen/tv_12_sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/dial_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/master_ll"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FBFEFE"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/large_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:orientation="vertical">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/small_iv_1"
                android:layout_width="83dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#b8b8b8"
                />

            <ImageView
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:background="#b8b8b8"
                android:id="@+id/small_iv_2"
                android:layout_width="83dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#f7fafc"/>
</LinearLayout>